@model IEnumerable<EnglishTest.Models.Test>

<h2>Tests</h2>

<p>
    @Html.ActionLink("New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finished)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Finished)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @if (item.Finished)
            {
                @Html.ActionLink("Resume", "Resume", new { id=item.Id })
            }
            else
            {
                @Html.ActionLink("Play", "Play", new { id=item.Id }) 
            }
        </td>
    </tr>
}

</table>